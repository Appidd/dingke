    width: 750rpx;
}
.fullwidth{
    width: 100%;
    padding: 20rpx 32rpx 0rpx 32rpx;
    box-sizing: border-box;
  
}
.double_list{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    /* width: 100%; */
}
.double_list1{
    display: flex;
   justify-content: space-between;
    font-size: 24rpx;
    width: 100%;
}
.flex_between{
   
justify-content: space-between;
}
.left_input_1{
    width: 220rpx;
height: 64rpx;
background: #F4F4F4;
