
.week_container{
    /* height: 200rpx; */
    width: 750rpx;
    background-color: #fff;
    border-radius: 0rpx 0rpx 32rpx 32rpx;
    padding-bottom: 20rpx;
  }
  .week_list{
    width: 100%;
    display: flex;
    padding: 0rpx 32rpx;
    box-sizing: border-box;
    justify-content: space-between;
    font-size: 28rpx;
  }
  .week_item{
    line-height: 48rpx;
    width: 48rpx;
    text-align: center;
    border-radius: 24rpx;
    position: relative;
  }
  .week_item::after{
    position: absolute;
  content: '';
  height: 80rpx;
  width: 80rpx;
  top: 50%;
  left: 50%; 
  transform: translate(-50%,-50%);
  }
  .gray_color{
    color: gray;
  }
  .checked{
    background-color: #015CAD;
    color: #fff;
  }